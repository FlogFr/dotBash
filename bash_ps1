

export PROMPT_COMMAND='history -a; export GIT_CURRENT_BRANCH=`get_current_git_branch`;'

RM_COLORS='\033[0m'
GREEN='\033[0;32m'
ORANGE='\033[0;33m'
RED='\033[0;31m'


PS1="${RM_COLORS}${GREEN}"
PS1+="[\u@\h]${RM_COLORS} [\w] \$(git-branch-prompt)"
# branch git 
PS1+="${RM_COLORS}\n $ "
export PS1

# for the long command line
PS2='--<'
PS4=' +'

bash_log "OK" "setting up all the prompts"

