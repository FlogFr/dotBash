[user]
	email = fgrignon@online.net
	name = aRkadeFR
[core]
	excludesfile = /home/fgrignon/.gitignore_global
	editor = vim
	excludefiles = /home/fgrignon/.gitignore
[merge]
	tool = vimdiff
[color]
	ui = true
	diff = always
	interactive = always
	branch = auto
	grep = always
	pager = true
	showbranch = true
	status = auto
[alias]
	lg = log -p
	lgp = log --graph -p
	addall = add -A
	st = status
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	last = log -1 HEAD
	fe = fetch
	co = checkout
	subst = submodule status --recursive
	subup = submodule update --recursive
	subsync = submodule sync
	br = branch
	re = rebase
	latest = for-each-ref --sort=-committerdate --format='%(committerdate:short) %(refname:short) [%(committername)]'
	ds = diff --staged
	amend = commit --amend -C HEAD
	ls = log --pretty=format:\"%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]\" --decorate --date=short
	delete-merged-branches = "!git co master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
[clean]
	requiredForce = true
[push]
	default = upstream
