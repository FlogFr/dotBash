[color]
        ui = true
        diff = always
        interactive = always
        branch = auto
        grep = always
        pager = true
        showbranch = true
        status = auto
[alias]
        lg = log
        lgp = log --graph -p
        st = status
        fe = fetch
        co = checkout
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        re = rebase
        br = branch
        rmbr = "branch --merged \\| grep -v \"\\*\" \\| xargs -n 1 git branch -d "
        delete-merged-branches = "!git co master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
        diffm = diff --diff-filter=M
        diffc = diff --cached
[push]
	default = current
