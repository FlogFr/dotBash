# some more ls aliases
alias ls="ls -lhN --color"
alias l="ls -lhN --color"
alias ll='ls -lhS'
alias la='ls -lhAS'

#some more alias cd
alias ..="cd .."
alias ...="cd ..; cd .."
alias ....="cd ..; cd ..; cd .."

alias cdp="cd ~/Projects"
alias cds="cd ~/Sites"
alias cdc="cd ~/Cours"
alias cdd="cd ~/Documents"
alias cdpo="cd ~/Projects/odalisk"
alias cde="cd ~/Documents/ebooks"


#some others
alias c="clear"

alias du='du -sch'

alias rm='rm -rvf'

alias grep='grep --color'

