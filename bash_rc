# memo for the diff files
# exe /etc/profile
# if ~/.bash_profile exists
#   exe ~/.bash_profile
# else
#   if ~/.bash_login
#   else
#       if ~/.profile

# If not running interactively, don't do anything
[ -z "$PS1" ] && return

#set the path for bin
PATH='~/bin/'
PATH+=':/usr/local/bin:/usr/bin:/bin:/usr/games'
if [ -f /home/fgrignon/odb_2.2.0/usr/bin/odb ]; then
    PATH+=':/home/fgrignon/odb_2.2.0/usr/bin/'
fi

export LD_LIBRARY_PATH="$(eval echo ~/lib/)"


# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).
if [ -f /etc/bash_completion ] && ! shopt -oq posix; then
    . /etc/bash_completion
    builtin echo "load bash_completion [OK]"
fi

if [ -f ~/.bash/shell_options ]; then
	. ~/.bash/shell_options
    builtin echo "load shell_options [OK]"
fi

if [ -f ~/.bash/bash_variables ]; then
	. ~/.bash/bash_variables
    builtin echo "load bash_variables [OK]"
fi

if [ -f ~/.bash/bash_function ]; then
	. ~/.bash/bash_function
    builtin echo "load bash_function [OK]"
fi

if [ -f ~/.bash/bash_aliases ]; then
    . ~/.bash/bash_aliases
    builtin echo "load bash_aliases [OK]"
fi

if [ -f ~/.bash/bash_ps1 ]; then
    . ~/.bash/bash_ps1
    builtin echo "load bash_ps1 [OK]"
fi

if [ -f $(eval echo "~/.local_bash.sh") ]; then
    . ~/.local_bash.sh
    builtin echo "load local_bash.sh [OK]"
fi

# append to the history file, don't overwrite it
export PROMPT_COMMAND='history -a'

# for the long command line
PS2='->'
PS4=' +'

# environment of bash
export EDITOR=vim

d=~/.dircolors
test -r $d && eval "$(dircolors $d)"
